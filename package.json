{
    "name": "nest-fastify-auth",
    "version": "1.0.0",
    "description": "Nest fastify api which handles auth and users",
    "license": "MIT",
    "scripts": {
        "prebuild": "rd /s /q dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "set NODE_ENV=development && nest start --watch ",
        "start:dev:db": "./src/scripts/init.sh",
        "start:debug": "nest start --debug --watch",
        "start:prod": "NODE_ENV=production node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "jest:clearCache": "jest --clearCache",
        "jest:showConfig": "jest --showConfig",
        "test": "jest --no-cache",
        "test:watch": "set NODE_ENV=test && jest --watchAll",
        "test:cov": "set NODE_ENV=test && jest --coverage",
        "test:debug": "set NODE_ENV=test && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "set NODE_ENV=test && jest --config test/specs/e2e/jest.e2e.json",
        "test:e2e:watch": "set NODE_ENV=test && jest --config tes/specs/e2e/jest.e2e.json --watch",
        "test:int": "set NODE_ENV=test && jest --config test/integration/jest.int.json",
        "test:int:watch": "set NODE_ENV=test && jest --config test/integration/jest.int.json --watch",
        "typeorm": "set NODE_ENV=development && ts-node --transpile-only ./node_modules/typeorm/cli.js --config src/config/configurations/migration.config.ts",
        "typeorm:test": "set NODE_ENV=test && ts-node --transpile-only ./node_modules/typeorm/cli.js --config src/config/configurations/migration.config.ts",
        "migration:create": "yarn typeorm migration:create -n",
        "migration:generate": "yarn typeorm migration:generate -n",
        "migration:create:test": "yarn typeorm:test migration:create -n",
        "migration:generate:test": "yarn typeorm:test migration:generate -n",
        "migrate:up": "yarn run typeorm migration:run",
        "migrate:test:up": "yarn run typeorm:test migration:run",
        "migrate:down": "yarn run typeorm migration:revert",
        "dc:up": "sudo docker-compose up",
        "dc:down": "sudo docker-compose down",
        "dc:deepdown": "yarn dc:delete:volumes && yarn dc:delete:postgres",
        "dc:stop": "sudo docker-compose stop",
        "dc:delete:volumes": "sudo docker-compose down -v",
        "dc:delete:postgres": "rd /s /q postgres"
    },
    "dependencies": {
        "@nestjs/common": "^8.4.4",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^8.4.4",
        "@nestjs/platform-fastify": "^8.4.4",
        "@nestjs/testing": "^8.4.4",
        "@nestjs/typeorm": "^8.0.3",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.5",
        "source-map-support": "^0.5.21",
        "typeorm": "0.2.41"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.30",
        "jest": "27.5.1",
        "supertest": "^6.2.3",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./",
        "transformIgnorePatterns": [
            "^.+\\.js$"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "setupFiles": [
            "dotenv/config"
        ],
        "verbose": true
    }
}
