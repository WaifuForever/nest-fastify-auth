{
    "name": "nest-fastify-auth",
    "version": "1.0.0",
    "description": "Nest fastify api which handles auth and users",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "NODE_ENV=development nest start --watch ",
        "start:dev:db": "./src/scripts/init.sh",
        "start:debug": "nest start --debug --watch",
        "start:prod": "NODE_ENV=production node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "jest:clearCache": "jest --clearCache",
        "jest:showConfig": "jest --showConfig",
        "test": "jest --no-cache",
        "test:watch": "NODE_ENV=test jest --watchAll",
        "test:cov": "NODE_ENV=test jest --coverage",
        "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "NODE_ENV=test jest --config test/e2es/jest-e2e.json",
        "test:e2e:watch": "NODE_ENV=test jest --config test/e2es/jest-e2e.json --watch",
        "test:int": "NODE_ENV=test jest --config test/integrations/jest-int.json",
        "test:int:watch": "NODE_ENV=test jest --config test/integrations/jest-int.json --watch",
        "typeorm": "NODE_ENV=development node --require ts-node/register ./node_modules/typeorm/cli.js --config src/config/configurations/migration.config.ts",
        "typeorm:test": "NODE_ENV=test node --require ts-node/register ./node_modules/typeorm/cli.js --config src/config/configurations/migration.config.ts",
        "migration:create": "yarn build && yarn run typeorm migration:create -- -n",
        "migration:generate": "yarn build && yarn run typeorm migration:generate -- -n",
        "migrate:up": "yarn build && yarn run typeorm migration:run",
        "migrate:test:up": "yarn build && yarn run typeorm:test migration:run",
        "migrate:down": "yarn build && yarn run typeorm migration:revert",
        "dc:up": "sudo docker-compose --env-file .env.development up",
        "dc:down": "sudo docker-compose --env-file .env.development down",
        "dc:deepdown": "yarn dc:delete:volumes && yarn dc:delete:postgres",
        "dc:stop": "sudo docker-compose --env-file .env.development stop",
        "dc:delete:volumes": "sudo docker-compose --env-file .env.development down -v",
        "dc:delete:postgres": "sudo rm -rf postgres"
    },
    "dependencies": {
        "@nestjs/common": "^8.4.4",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^8.4.4",
        "@nestjs/platform-fastify": "^8.4.4",
        "class-validator": "^0.13.2",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.5",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@types/node": "^17.0.30",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    }
}
